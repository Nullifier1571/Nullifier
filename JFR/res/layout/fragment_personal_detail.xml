<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_pager" >

    <include
        android:id="@+id/item_title"
        layout="@layout/item_title" />

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title" >

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="头像"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />

            <ImageView
                android:id="@+id/personal_profile_iv_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:src="@drawable/people" />
        </RelativeLayout>

        <View
            android:id="@+id/line_1"
            style="@style/horizontal_line"
            android:layout_width="340dp"
            android:layout_below="@id/rl_1"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_1"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="昵称"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />
        </RelativeLayout>

        <View
            android:id="@+id/line_2"
            style="@style/horizontal_line"
            android:layout_width="340dp"
            android:layout_below="@id/rl_2"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_2"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="性别"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />
        </RelativeLayout>

        <View
            android:id="@+id/line_3"
            style="@style/horizontal_line"
            android:layout_width="340dp"
            android:layout_below="@id/rl_3"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_3"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="生日"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />
        </RelativeLayout>

        <View
            android:id="@+id/line_4"
            style="@style/horizontal_line"
            android:layout_width="340dp"
            android:layout_below="@id/rl_4"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_4"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="所在地"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />
        </RelativeLayout>

        <View
            android:id="@+id/line_5"
            style="@style/horizontal_line"
            android:layout_width="340dp"
            android:layout_below="@id/rl_5"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rl_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_5"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="个人简介"
                android:textSize="@dimen/content_text_size_middle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/me_cellarrow" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/person_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_middle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="个性标签"
        android:textSize="20sp" />

    <GridView
        android:id="@+id/personal_gv_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_lable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:listSelector="#ffffff"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="5dp" />

</RelativeLayout>