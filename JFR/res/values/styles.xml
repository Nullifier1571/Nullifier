<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="edit_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColorHint">@color/color_gary</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:textColorHint">@color/color_gary</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:background">@color/color_gary</item>
    </style>

    <style name="item">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>