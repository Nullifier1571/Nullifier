<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itjfr.jfr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.itjfr.jfr.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 展示页面activity -->
        <activity
            android:name="com.itjfr.jfr.splash.SplashFirst"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <activity
            android:name="com.itjfr.jfr.splash.SplashSecond"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <activity
            android:name="com.itjfr.jfr.splash.SplashThrid"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 登录页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.RegistActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 主页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.CenterActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 个人详情页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.PersonDetailActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 新闻详情页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.NewsDetailActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 文本输入页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.InputActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 性别输入页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.SexPickerActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 生日输入页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.BirthDayPickerActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <!-- 地址输入页面activity -->
        <activity
            android:name="com.itjfr.jfr.activity.LocationPickerActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
    </application>

</manifest>